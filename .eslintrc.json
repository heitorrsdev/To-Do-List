{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-trailing-spaces": "error",
    "no-unused-vars": "warn",
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
